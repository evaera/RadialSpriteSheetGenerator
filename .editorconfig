root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

[*.js]
insert_final_newline = true
indent_style = space
indent_size = 2

[{package.json,*.yml,*.cjson}]
indent_style = space
indent_size = 2

[*.lua]
indent_style = tab
insert_final_newline = false
trim_trailing_whitespace = true